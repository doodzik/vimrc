noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
" noremap h <NOP>
" noremap j <NOP>
" noremap k <NOP>
" noremap l <NOP>
imap <esc> <NOP>

" use ZZ instead, fewer keystrokes
cnoreabbrev wq <NOP>
cnoreabbrev x  <NOP>

" block visual mode
nmap v     <NOP>
nmap V     <NOP>
nmap <c-v> <NOP>

map <C-Left> <NOP>
map <C-Right> <NOP>
